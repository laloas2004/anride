<%- include ../includes/menu %>

<div class="container">

    <div class="row">
        <div class ="col-md-12">
            <div class="page-header">
                <h1>Servicios</h1>
                <% if(servicios.length > 0){ %>

                <div class="row">
                    <div class="col-md-6">
                        Nombre: <%= servicios[0].cliente.nombre %>
                    </div>


                </div>
                <div class="row">
                    <div class="col-md-6">
                        Email: <%= servicios[0].cliente.email %>
                    </div>


                </div>

                <table class="table table-striped">
                    <thead>
                        <tr>

                            <th>Origen</th>
                            <th>Destino</th>
                            <th>Distancia</th>
                            <th>Tiempo</th>
                            <th>Monto</th>
                            <th>Status</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>

                        <%  

                        _.each(servicios,function(servicio){ 

                        var tiempo = parseFloat(servicio.tiempo);
                        var monto  = parseFloat(servicio.monto);
                        var distancia = servicio.distancia || 'SIN DATOS';
                        %>
                        <tr>

                            <td><%= servicio.solicitud.direccion_origen%></td>
                            <td><%= servicio.solicitud.direccion_destino%></td>
                            <td><%= distancia%> Metros</td>
                            <td><%= tiempo.toFixed(2)%> Minutos</td>
                            <td>$ <%= monto.toFixed(2)%> MXN</td>
                            <td><%= servicio.status%></td>
                            <td><%= servicio.updatedAt%></td>
                        </tr>
                        <% })%>
                    </tbody>
                </table>     



                <% }else{ %>

                <div class="row">
                    <div class="col-md-6">
                        <h2> Sin Servicios </h2>
                    </div>


                </div>

                <% } %>

            </div>


        </div>
        <script>
            $(document).ready(function() {





            });




        </script>